<script>
  $(function() {
    $('.hidden-toggle').hide();
    $('#user_password').on('keyup', function(e) {
      if($(this).val().length > 0) {
        $('.hidden-toggle').show();
      }
      else {
        $('.hidden-toggle').val('').hide();
      }
    });
  });
</script>
